<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Prados.Web</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Prados.Web</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li><a asp-area="" asp-controller="Propietario" asp-action="Index">Propietarios</a></li>
                        <li><a asp-area="" asp-controller="Contabilidad" asp-action="Index">Contabilidad</a></li>
                        <li><a asp-area="" asp-controller="Noticia" asp-action="Index">Noticias</a></li>
                        <li><a asp-area="" asp-controller="Negocio" asp-action="Index">Negocios</a></li>



                        <div class="btn-group" style="margin-top:8px">
                            <button type="button" class="btn btn-default dropdown-toggle"
                                    data-toggle="dropdown">
                                Configuración <span class="caret"></span>
                            </button>

                            <ul class="dropdown-menu" role="menu">
                                <li><a asp-area="" asp-controller="Anio" asp-action="Index">Años</a></li>

                                <li><a asp-area="" asp-controller="Valor" asp-action="Index">Valores</a></li>
                                <li><a asp-area="" asp-controller="PuntoPago" asp-action="Index">Punto Pago</a></li>
                                <li><a asp-area="" asp-controller="TiposPago" asp-action="Index">Tipo de Pago</a></li>
                                <li><a asp-area="" asp-controller="MarcaAutoes" asp-action="Index">Marca</a></li>
                                <li><a asp-area="" asp-controller="Manager" asp-action="Index">Manager</a></li>
                                <li><a asp-area="" asp-controller="Egreso" asp-action="Index">Egreso</a></li>
                                <li><a asp-area="" asp-controller="EstadosFinancieros" asp-action="Index">Estados</a></li>


                            </ul>
                        </div>

                    }

                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contacto</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li><a>@User.Identity.Name</a></li>
                        <li><a asp-area="" asp-controller="Account" asp-action="Logout">Cerrar Sesión</a></li>
                    }
                    else
                    {
                        <li><a asp-area="" asp-controller="Account" asp-action="Login">Iniciar Sesión</a></li>
                    }
                </ul>
