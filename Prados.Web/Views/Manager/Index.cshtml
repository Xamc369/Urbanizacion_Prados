@model IEnumerable<Prados.Web.Data.Entities.Managerstbl>

@{
    ViewData["Title"] = "Index";
}

<div class="content-wrapper">

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">


                            <h2 style="text-align:center">Lista de Administradores</h2>


                            <p>
                                <a asp-action="Create" class="btn btn-success"><img src="~/images/icon/ADD.png" width="30" height="30"></a>
                            </p>
                        </div>

                        <flash dismissable="true" />
                        <div class="card-body ">
                            <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        <table id="example1" class="table table-responsive" role="grid" aria-describedby="example1_info">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.FirstOrDefault().User.Pro_Identificacion)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.FirstOrDefault().User.Pro_Nombres)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.FirstOrDefault().User.Pro_Apellidos)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.FirstOrDefault().User.Pro_Lote)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.FirstOrDefault().User.Email)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.FirstOrDefault().User.Pro_Telefono)
                                                    </th>
                                                    <th style="text-align:center"> Editar</th>
                                                    <th style="text-align:center"> Eliminar</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.User.Pro_Identificacion)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.User.Pro_Nombres)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.User.Pro_Apellidos)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.User.Pro_Lote)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.User.Email)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.User.Pro_Telefono)
                                                        </td>
                                                        <td>
                                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning center-block"><img src="~/images/icon/editar.png" width="30" height="30"></a>

                                                        </td>
                                                        <td>
                                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger center-block"><img src="~/images/icon/eliminar.png" width="30" height="30"></a>
                                                            @*<button data-id="@item.Id" class="btn btn-danger deleteItem center-block" data-toggle="modal" data-target="#deleteDialogo"><i class="glyphicon glyphicon-trash"></i></button>*@
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>





                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->
<!-- jQuery -->

<!--Delete Item-->
<div class="modal fade" id="deleteDialog" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Do you want to delete the record?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="btnYesDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script type="text/javascript">
        $(document).ready(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });


        });
    </script>
}
