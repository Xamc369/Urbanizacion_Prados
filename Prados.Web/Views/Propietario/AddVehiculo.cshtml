@model Prados.Web.Models.VehiculoViewModel

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/fonts/font-awesome-4.7.0/css/all.css">
<link rel="stylesheet" href="~/css/adminlte.min.css">
<script type="text/javascript" src="~/js/imagen_visualizacion.js"></script>





<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    
                        <h2 class="text-titles" style="text-align:center"><i class="fa fa-car"></i> <strong> Registrar Vehiculo</strong></h2>
                    

                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                        <li class="breadcrumb-item active">Formulario General</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>



    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">




                    <!-- Input addon -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Crear Nuevo</h3>
                        </div>
                        <div class="card-body">





                            <form asp-action="AddVehiculo" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="PropietarioId" />

                                <!-- Usuario, tipo y n° lote -->
                                <div class="form-row" style="margin-top:10px">

                                    <div class="form-group col-md-6">

                                        <label asp-for="Veh_Codigo" class="control-label"></label>
                                        <input asp-for="Veh_Codigo" class="form-control" />
                                        <span asp-validation-for="Veh_Codigo" class="text-danger"></span>
                                        </br>




                                        <label asp-for="Veh_Placa" class="control-label"></label>
                                        <input asp-for="Veh_Placa" class="form-control" pattern="[A-Z]{3}[0-9]{4}" title="La placa debe tener 3 letras mayusculas y 4 numeros" />
                                        <span asp-validation-for="Veh_Placa" class="text-danger"></span>
                                        </br>

                                        <!-- Imagen y Observaciones -->


                                        <label asp-for="ImageFile" class="control-label"></label>
                                        <input asp-for="ImageFile" class="form-control" type="file" id="inputFile1" />

                                        <span asp-validation-for="ImageFile" class="text-danger"></span>


                                        <label asp-for="Veh_Detalles" class="control-label"></label>
                                        <textarea asp-for="Veh_Detalles" class="form-control"></textarea>
                                        <span asp-validation-for="Veh_Detalles" class="text-danger"></span>



                                    </div>


                                     <div class="card col-6">
                                        <div class="form-group ">
                                            <img id="img1" style="width:100%;height:100%;"><br />
                                        </div>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <input type="submit" value="Crear" class="btn btn-primary" />
                                        @*<a asp-action="Details" asp-route-id="@Model.PropietarioId" class="btn btn-info"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i></a>*@
                                        <a asp-action="Details" asp-route-id="@Model.PropietarioId" class="btn btn-info">
                                            <i aria-hidden="true">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
                                                </svg>
                                            </i>
                                        </a>
                                    </div>


                                </div>

                            </form>



                            <!-- /input-group -->
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <!-- Horizontal Form -->
                    <!-- /.card -->
                    <!--/.col (left) -->
                    <!-- right column -->
                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->










<!--Ver imagen-->

<script>
    function init() {
        var inputFile = document.getElementById('inputFile1');
        inputFile.addEventListener('change', mostrarImagen, false);
    }

    function mostrarImagen(event) {
        var file = event.target.files[0];
        var reader = new FileReader();
        reader.onload = function (event) {
            var img = document.getElementById('img1');
            img.src = event.target.result;
        }
        reader.readAsDataURL(file);
    }

    window.addEventListener('load', init, false);
</script>







