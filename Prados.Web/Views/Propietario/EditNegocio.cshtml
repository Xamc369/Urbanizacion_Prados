@model Prados.Web.Models.NegocioViewModel

@{
    ViewData["Title"] = "Create";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                    <h2 class="text-titles" style="text-align:center">
                        <i>
                            <svg xmlns="http://www.w3.org/2000/svg" width="30px" height="30px" fill="currentColor" class="bi bi-shop" viewBox="0 0 16 16">
                                <path d="M2.97 1.35A1 1 0 0 1 3.73 1h8.54a1 1 0 0 1 .76.35l2.609 3.044A1.5 1.5 0 0 1 16 5.37v.255a2.375 2.375 0 0 1-4.25 1.458A2.371 2.371 0 0 1 9.875 8 2.37 2.37 0 0 1 8 7.083 2.37 2.37 0 0 1 6.125 8a2.37 2.37 0 0 1-1.875-.917A2.375 2.375 0 0 1 0 5.625V5.37a1.5 1.5 0 0 1 .361-.976l2.61-3.045zm1.78 4.275a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 1 0 2.75 0V5.37a.5.5 0 0 0-.12-.325L12.27 2H3.73L1.12 5.045A.5.5 0 0 0 1 5.37v.255a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0zM1.5 8.5A.5.5 0 0 1 2 9v6h1v-5a1 1 0 0 1 1-1h3a1 1 0 0 1 1 1v5h6V9a.5.5 0 0 1 1 0v6h.5a.5.5 0 0 1 0 1H.5a.5.5 0 0 1 0-1H1V9a.5.5 0 0 1 .5-.5zM4 15h3v-5H4v5zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3zm3 0h-2v3h2v-3z" />
                            </svg>
                        </i> <strong> Registrar Negocio</strong>
                    </h2>


                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index1">Inicio</a></li>
                        <li class="breadcrumb-item active">Formulario General</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>



    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">




                    <!-- Input addon -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Crear Nuevo</h3>
                        </div>
                        <div class="card-body">




                            <form asp-action="EditNegocio" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="ImageUrl" />
                                <input type="hidden" asp-for="PropietarioId" />

                                <div class="form-row" style="margin-top:10px">
                                    <div class="form-group col-md-6">

                                        <div class="form-group">
                                            <label asp-for="Neg_Nombre" class="control-label"></label>
                                            <input asp-for="Neg_Nombre" class="form-control" />
                                            <span asp-validation-for="Neg_Nombre" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Neg_Descripcion" class="control-label"></label>
                                            <textarea asp-for="Neg_Descripcion" class="form-control"></textarea>
                                            <span asp-validation-for="Neg_Descripcion" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="ImageFile" class="control-label"></label>
                                            <input asp-for="ImageFile" class="form-control" type="file" />
                                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Neg_Telefono" class="control-label"></label>
                                            <input asp-for="Neg_Telefono" class="form-control" />
                                            <span asp-validation-for="Neg_Telefono" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="Neg_Direccion" class="control-label"></label>
                                            <input asp-for="Neg_Direccion" class="form-control" />
                                            <span asp-validation-for="Neg_Direccion" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="card col-6">
                                        <div class="form-group ">
                                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                            {
                                                <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width: 100%; height: 100%;" />
                                            }
                                        </div>
                                    </div>



                                    <div class="form-group col-md-12">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                        @* <a asp-action="Details" asp-route-id="@Model.PropietarioId" class="btn btn-success">Back to Owner</a>*@
                                        <a asp-action="Details" asp-route-id="@Model.PropietarioId" class="btn btn-info">
                                            <i aria-hidden="true">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
                                                </svg>
                                            </i>
                                        </a>
                                    </div>


                                </div>




                            </form>




                            <!-- /input-group -->
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <!-- Horizontal Form -->
                    <!-- /.card -->
                    <!--/.col (left) -->
                    <!-- right column -->
                    <!--/.col (right) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!--Ver imagen-->











<script>
    function init() {
        var inputFile = document.getElementById('inputFile1');
        inputFile.addEventListener('change', mostrarImagen, false);
    }

    function mostrarImagen(event) {
        var file = event.target.files[0];
        var reader = new FileReader();
        reader.onload = function (event) {
            var img = document.getElementById('img1');
            img.src = event.target.result;
        }
        reader.readAsDataURL(file);
    }

    window.addEventListener('load', init, false);
</script>



