
@model Prados.Web.Models.PagoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPago" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PropietarioId" />

            <div class="form-group">
                <label asp-for="PAG_FECHAPAGADO" class="control-label"></label>
                <input asp-for="PAG_FECHAPAGADO" class="form-control" />
                <span asp-validation-for="PAG_FECHAPAGADO" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AnioId" class="control-label"></label>
                <select asp-for="AnioId" asp-items="Model.Anios1" class="form-control"></select>
                <span asp-validation-for="AnioId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MesId" class="control-label"></label>
                <select asp-for="MesId" asp-items="Model.Meses1" class="form-control"></select>
                <span asp-validation-for="MesId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ValorId" class="control-label"></label>
                <select asp-for="ValorId" asp-items="Model.Valores" class="form-control"></select>
                <span asp-validation-for="ValorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoPagoId" class="control-label"></label>
                <select asp-for="TipoPagoId" asp-items="Model.TiposPago" class="form-control"></select>
                <span asp-validation-for="TipoPagoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PuntoPagoId" class="control-label"></label>
                <select asp-for="PuntoPagoId" asp-items="Model.Puntos" class="form-control"></select>
                <span asp-validation-for="PuntoPagoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.PropietarioId" class="btn btn-success">Back to Owner</a>
            </div>
        </form>
    </div>
</div>

