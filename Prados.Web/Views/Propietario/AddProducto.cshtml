@model Prados.Web.Models.ProductoViewModel

@{
    ViewData["Title"] = "Create";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h2 class="text-titles" style="text-align:center">
                        <i>
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
                                <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                            </svg>
                        </i><strong>Registrar Nuevo Producto</strong>
                    </h2>

                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index1">Inicio</a></li>
                        <li class="breadcrumb-item active">Formulario General</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>


    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">




                    <!-- Input addon -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Crear Nuevo</h3>
                        </div>
                        <div class="card-body">


                            <div class="col-md-12 col-sm-10">
                                <form asp-action="AddProducto" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="NegocioId" />

                                    <div class="form-row" style="margin-top:10px">

                                        <div class="form-group col-md-6">


                                           
                                                <label asp-for="Pro_Nombre" class="control-label"></label>
                                                <input asp-for="Pro_Nombre" class="form-control" />
                                                <span asp-validation-for="Pro_Nombre" class="text-danger"></span>
                                           

                                            
                                                <label asp-for="Pro_Precio" class="control-label"></label>
                                                <input asp-for="Pro_Precio" class="form-control" />
                                                <span asp-validation-for="Pro_Precio" class="text-danger"></span>
                                            

                                            
                                                <label asp-for="ImageFile" class="control-label"></label>
                                                <input asp-for="ImageFile" class="form-control" type="file" id="inputFile1" />
                                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                                           
                                        </div>
                                        <div class="card col-6">
                                            <div class="form-group ">
                                                <img id="img1" style="width:100%;height:100%;"><br />
                                            </div>
                                        </div>

                                        <div class="form-group col-md-12">
                                            <input type="submit" value="Crear" class="btn btn-primary" />
                                            <a asp-action="DetailsNegocio" asp-route-id="@Model.NegocioId" class="btn btn-info"><i aria-hidden="true">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                                                        <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
                                                    </svg>
                                                </i></a>
                                        </div>
                                    </div>
                                </form>
                            </div>


                            <!-- /input-group -->
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
            </div>
    </section>
</div>


<!--Ver imagen-->

<script>
    function init() {
        var inputFile = document.getElementById('inputFile1');
        inputFile.addEventListener('change', mostrarImagen, false);
    }

    function mostrarImagen(event) {
        var file = event.target.files[0];
        var reader = new FileReader();
        reader.onload = function (event) {
            var img = document.getElementById('img1');
            img.src = event.target.result;
        }
        reader.readAsDataURL(file);
    }

    window.addEventListener('load', init, false);
</script>























