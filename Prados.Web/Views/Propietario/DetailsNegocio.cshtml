@model Prados.Web.Data.Entities.Negociostbl

@{
    ViewData["Title"] = "Details";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                    <h2 class="text-titles" style="text-align:center">
                        <i>
                            <svg xmlns="http://www.w3.org/2000/svg" width="30px" height="30px" fill="currentColor" class="bi bi-shop" viewBox="0 0 16 16">
                                <path d="M2.97 1.35A1 1 0 0 1 3.73 1h8.54a1 1 0 0 1 .76.35l2.609 3.044A1.5 1.5 0 0 1 16 5.37v.255a2.375 2.375 0 0 1-4.25 1.458A2.371 2.371 0 0 1 9.875 8 2.37 2.37 0 0 1 8 7.083 2.37 2.37 0 0 1 6.125 8a2.37 2.37 0 0 1-1.875-.917A2.375 2.375 0 0 1 0 5.625V5.37a1.5 1.5 0 0 1 .361-.976l2.61-3.045zm1.78 4.275a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 1 0 2.75 0V5.37a.5.5 0 0 0-.12-.325L12.27 2H3.73L1.12 5.045A.5.5 0 0 0 1 5.37v.255a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0zM1.5 8.5A.5.5 0 0 1 2 9v6h1v-5a1 1 0 0 1 1-1h3a1 1 0 0 1 1 1v5h6V9a.5.5 0 0 1 1 0v6h.5a.5.5 0 0 1 0 1H.5a.5.5 0 0 1 0-1H1V9a.5.5 0 0 1 .5-.5zM4 15h3v-5H4v5zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3zm3 0h-2v3h2v-3z" />
                            </svg>
                        </i> <strong> Negocio</strong>
                    </h2>


                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index1">Inicio</a></li>
                        <li class="breadcrumb-item active">Información</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>



    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <flash dismissable="true" />
                <div class="form-group col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 style=""> <strong>Detalles</strong></h3>
                        </div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <dl>
                                    <dd>
                                        <strong> Propietario: </strong>

                                        @Html.DisplayFor(model => model.Propietarios.User.NombreCompleto)
                                    </dd>

                                    <dd>
                                        <strong> @Html.DisplayNameFor(model => model.Neg_Nombre): </strong>
                                        @Html.DisplayFor(model => model.Neg_Nombre)
                                    </dd>
                                    <dd>
                                        <strong>  @Html.DisplayNameFor(model => model.Neg_Direccion): </strong>
                                        @Html.DisplayFor(model => model.Neg_Direccion)
                                    </dd>
                                    <dd>
                                        <strong>   @Html.DisplayNameFor(model => model.Neg_Telefono): </strong>
                                        @Html.DisplayFor(model => model.Neg_Telefono)
                                    </dd>
                                </dl>

                            </blockquote>



                            <div class="form-group col-md-12" style="margin-top:60px">


                                <a asp-action="EditNegocio" asp-route-id="@Model.Id" class="btn btn-warning"><img src="~/images/icon/editar.png" width="30" height="30"></a>
                                <a asp-action="AddProducto" asp-route-id="@Model.Id" class="btn btn-success"><img src="~/images/icon/ADD.png" width="30" height="30"></a>
                                <a asp-action="Details" asp-route-id="@Model.Propietarios.Id" class="btn btn-info">
                                    <i aria-hidden="true">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
                                        </svg>
                                    </i>
                                </a>

                            </div>

                        </div>
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3><strong>Imagen Negocio</strong></h3>
                        </div>
                        <div class="card-body">


                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width:100%;height:100%;" />
                            }





                        </div>
                    </div>
                </div>






                <hr />
                @if (Model.Producto.Count == 0)
                {



                    <div class="form-group col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3><strong>No ha ingresado productos aun.</strong></h3>
                            </div>
                            <div class="card-body">
                            </div>
                        </div>
                    </div>

                }
                else
                {
                    <div class="form-group col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3><strong>Vehiculos</strong></h3>
                            </div>
                            <div class="card-body">
                                <div id="example3_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                    <div class="row">
                                        <div class="col-sm-12">

                                            <table id="example5" class="table table-responsive " role="grid" aria-describedby="example1_info">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Producto.FirstOrDefault().Pro_Nombre)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Producto.FirstOrDefault().Pro_Precio)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Producto.FirstOrDefault().ImageUrl)
                                                        </th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.Producto.Where(p => p.Pro_Estado == 'A'))
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Pro_Nombre)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Pro_Precio)
                                                            </td>
                                                            <td>
                                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                                {
                                                                    <img src="@Url.Content(item.ImageUrl)" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />
                                                                }
                                                            </td>
                                                            <td>
                                                                <a asp-action="EditProducto" asp-route-id="@item.Id" class="btn btn-warning"><img src="~/images/icon/editar.png" width="30" height="30"></a>
                                                                <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><img src="~/images/icon/eliminar.png" width="30" height="30"></button>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>



                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>





                }

                <partial name="_DeleteDialog" />




                <!-- /.row -->
            </div><!-- /.container-fluid -->




        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
            // Delete item
            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                window.location.href = '/Propietario/DeleteProducto/' + item_to_delete;
            });
        });
    </script>



    <script type="text/javascript">
        $(document).ready(function () {
            $("#example5").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example3_wrapper .col-md-6:eq(0)');
            $('#example6').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });


        });
    </script>




}






